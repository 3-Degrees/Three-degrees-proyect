<div class="display-4 text-center">Organizaciones</div>
<hr><br>
<div class="row align-items-center">
    <div class="card-deck">
        <% @organizations.each do |organization| %>           
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" <%= image_tag organization.avatar.url, alt: "Avatar de la organizaciÃ³n" if organization.avatar.url %>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to organization.name, perfil_organizacion_path(id: organization.id) %></h5>
                    <p class="card-text"><%= organization.mission %></p>
                    <p class="card-text text-muted"><%= fa_icon "map-marker" %> <%= organization.location %></p>
                </div>
            </div>  
        <% end %>
    </div>
</div>
<br><br>