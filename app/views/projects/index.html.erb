<p id="notice"><%= notice %></p>

<h1 class="display-4 text-center">Proyectos de voluntariado</h1>


<% @projects.each do |project| %>
  <div class="card-deck">
    <div class="card">
      <img class="card-img-top" <%= image_tag project.image.url if project.image.url %> alt="imagen del proyecto">
      <div class="card-body">
        <h5 class="card-title"><%= link_to project.title, project %></h5>
        <p class="card-text"><%= project.description %></p>
        <p class="card-text"><small><%= project.organization %></small></p>
        <p class="card-text"><small class="text-muted"><%= project.location %></small></p>
        <p class="card-text"><small class="text-muted"><%= project.project_date %></small></p>
      </div>
    </div>
  </div>
<% end %>

<br>

<% if organization_signed_in? %>
  <%= link_to 'Nuevo proyecto', new_project_path %>
<% else %>
  <%= link_to 'Inicia sesiÃ³n para crear un nuevo proyecto', new_organization_session_path %>
<% end %>
